@page
@model proiect_clinica.Pages.Angajati.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].DataAngajare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].AngajatCalificari)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AngajatD.Angajati)
        {
            string selectedRow = "";
            if (item.ID == Model.AngajatID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.Nume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAngajare)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adresa)
                </td>
                <td>
                    @{
                        foreach (var calificare in item.AngajatCalificari)
                        {
                            @calificare.Calificare.ID @: @calificare.Calificare.CalificareTip <br />
                        }
                    }
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>