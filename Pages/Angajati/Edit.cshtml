@page
@model proiect_clinica.Pages.Angajati.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Angajat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Angajat.ID" />
            <div class="form-group">
                <label asp-for="Angajat.Nume" class="control-label"></label>
                <input asp-for="Angajat.Nume" class="form-control" />
                <span asp-validation-for="Angajat.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Angajat.Prenume" class="control-label"></label>
                <input asp-for="Angajat.Prenume" class="form-control" />
                <span asp-validation-for="Angajat.Prenume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Angajat.DataAngajare" class="control-label"></label>
                <input asp-for="Angajat.DataAngajare" class="form-control" />
                <span asp-validation-for="Angajat.DataAngajare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Angajat.Adresa" class="control-label"></label>
                <input asp-for="Angajat.Adresa" class="form-control" />
                <span asp-validation-for="Angajat.Adresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cal in Model.AssignedCalificareList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                        @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedCalificari"
                                               value="@cal.CalificareID"
                                               @(Html.Raw(cal.Assigned ?
                                               "checked=\"checked\"" : "")) />
                                        @cal.CalificareID @: @cal.Tip
                                    @:</td>
                                }
                            }
                        </tr>
                    </table>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
