@page
@model proiect_clinica.Pages.Angajati.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Angajat</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Angajat.Nume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Angajat.Nume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Angajat.Prenume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Angajat.Prenume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Angajat.DataAngajare)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Angajat.DataAngajare)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Angajat.Adresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Angajat.Adresa)
        <dt class="col-sm-2">
            Calificări
        </dt>
        <dd class="col-sm-10">
                @if (Model.Angajat.AngajatCalificari != null)
                {
                    foreach (var angajatCalificare in Model.Angajat.AngajatCalificari)
                    {
                    <div>
                            @angajatCalificare.Calificare.CalificareTip (ID: @angajatCalificare.CalificareID)
                    </div>
                    }
                }
                else
                {
                <div>Nu există calificări înregistrate.</div>
                }
        </dd>
        <!-- Adaugă aici alte proprietăți ale angajatului pe care dorești să le afișezi -->
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Angajat?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
